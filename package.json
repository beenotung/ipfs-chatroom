{
  "name": "ipfs-chatroom",
  "version": "0.0.1",
  "description": "A simple webapp to be hosted on CDN",
  "main": "dist/bundle.js",
  "scripts": {
    "prebuild": "mkdir -p dist",
    "build": "npm-run-all -p build:*",
    "prebuild:js": "tsc -p .",
    "build:js": "browserify src/main.js > dist/bundle.js",
    "postbuild:js": "rm src/main.js",
    "build:html": "cp src/index.html dist/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prerelease": "npm run build && echo 'ipfs-chatroom.surge.sh' > dist/CNAME",
    "release": "surge dist",
    "serve": "http-server --ssl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beenotung/ipfs-chatroom.git"
  },
  "keywords": [
    "ipfs",
    "p2p",
    "chatroom",
    "webapp"
  ],
  "author": "Beeno Tung",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/beenotung/ipfs-chatroom/issues"
  },
  "homepage": "https://github.com/beenotung/ipfs-chatroom#readme",
  "dependencies": {
    "ipfs": "^0.26.0",
    "y-array": "^10.1.4",
    "y-indexeddb": "^8.1.9",
    "y-ipfs-connector": "^1.2.1",
    "y-map": "^10.1.3",
    "y-memory": "^8.0.9",
    "y-text": "^9.5.1",
    "yjs": "^12.3.3"
  },
  "devDependencies": {
    "bower": "^1.8.2",
    "browserify": "^14.4.0",
    "http-server": "^0.10.0",
    "npm-run-all": "^4.1.1",
    "surge": "^0.19.0",
    "tsify": "^3.0.3",
    "typescript": "^2.5.2",
    "typestub-ipfs": "^0.23.6",
    "typestub-yjs": "0.0.1"
  }
}
